<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Your BLog</title>
</head>
<body>
    <%- include('./partials/navbar') %>
    <div class="container-fluid p-5">
        <div style="height: max-content; width: max-width;" class="mb-5">
            <img class="img-fluid rounded" style="image-orientation:0grad;"  src="<%= blog.coverImageURL %>" alt="">
        </div>
        <hr>
        <div class="mt-5">
            <h2 class="text-center font-monospace"><%= blog.title %></h2>
        </div>
        <div class="mt-5">
            <pre class="fs-2"><%= blog.body %></pre>
        </div>
        <form action ="/blog/comment/<%= user._id %>" method="post">
          <div class="mb-3 mt-5">
            <input type="text" 
             class="form-control"
             name="content" 
             placeholder="Enter your comment "
             aria-describedby="emailHelp"
             >
            <% if (locals.user) { %>
             <button class="btn btn-sm btn-primary mt-2   mb-4" type="submit">add</button>
             <% } else { %>
               <button class="btn btn-sm btn-primary mt-2">
                 <a href="user/signin">
                   add
                 </a>
               </button>
               <% }%>
          </div>
        </form>

        <div>
            <% AllComment.forEach(element => { %>
              <img src="<%= element.createdBy.profileImage %>" alt="" width="50px" height="50px" style="border-radius: 50%;">
              <%= element.createdBy.fullname %>:
              <%= element.content %>
              <br class="mb-5">
            <% }) %>
        </div>
    </div>
    <%- include('./partials/scripts') %>    
</body>
</html>